@model IEnumerable<HotelSystem.Model.Feature>

@{
    ViewBag.Title = "特色酒店";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<div class="panel panel-default">
    <div class="panel-heading">
        <h2><i class="fa fa-table red"></i><span class="break"></span><strong>添加特色</strong></h2>
    </div>
    <div class="panel-body">
        @Html.Action("Edit")
    </div>
</div>
<div class="panel panel-default">
    <div class="panel-heading">
        <h2><i class="fa fa-table red"></i><span class="break"></span><strong>特色酒店</strong></h2>
    </div>
    <div class="panel-body">
        <table class="table table-striped table-bordered bootstrap-datatable datatable">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Summary)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Ico)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Type)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CreateTime)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.UpdateTime)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Valid)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Summary)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Ico)
                    </td>
                    <td>
                        @(Html.DisplayFor(modelItem => item.Type).ToString()=="1"?"特色酒店":"标签酒店")
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CreateTime)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.UpdateTime)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Valid)
                    </td>
                    <td>
                        @Html.ActionLink("编辑酒店", "HotelList", new { id = item.Id }) |
                        @Html.ActionLink("删除", "DeleteFeature", new { id = item.Id })
                    </td>
                </tr>
            }
        </table>
    </div>
</div>