@model IEnumerable<HotelSystem.Model.Guide>
@{
    ViewBag.Title = "到达指引";
    Layout = "~/Areas/Hotel/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h2><i class="fa fa-indent red"></i><strong>添加指引</strong></h2>
            </div>
            <div class="panel-body">
                <form enctype="multipart/form-data" action="/Hotel/Info/AddMap" class="form-horizontal group-border" role="form" method="post">

                    <div class="form-group">
                        <label class="col-lg-2 col-md-2 col-sm-12 control-label">指引类型</label>
                        <div class="col-lg-3 col-md-10">
                            <select name="Type" class="form-control" placeholder="必填" required>
                                <option value="1">机场信息</option>
                                <option value="2">火车信息</option>
                                <option value="3">地标信息</option>
                            </select>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-lg-2 col-md-2 col-sm-12 control-label">指引名称</label>
                        <div class="col-lg-3 col-md-10">
                            <input name="Name" class="form-control" type="text" placeholder="上海浦东机场" required>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-lg-2 col-md-2 col-sm-12 control-label">指引描述</label>
                        <div class="col-lg-3 col-md-10">
                            <input name="Describe" class="form-control" type="text" placeholder="驾车距离44公里（约44分钟）" required>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-lg-2 col-md-2 col-sm-12 control-label"></label>
                        <div class="col-lg-10 col-md-10">
                            <button type="submit" class="btn btn-sm btn-success"><i class="fa fa-dot-circle-o"></i> 添加</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div><!--.col-->
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading" data-original-title="">
                <h2><i class="fa fa-indent red"></i><strong>指引列表</strong></h2>
            </div>
            <div class="panel-body">
                <table class="table table-striped table-bordered bootstrap-datatable datatable">
                    <tr>

                        <th>
                            @Html.DisplayNameFor(model => model.Type)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Describe)
                        </th>

                        <th></th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @(item.Type==1? "机场信息" : item.Type==2? "火车信息" : "地标信息")
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.Describe)
                            </td>
                            <td>

                                @Html.ActionLink("删除", "DeleteMap", new { id = item.Id },new { @onclick= "return confirm('确认删除吗？');" })
                            </td>
                        </tr>
                    }
                </table>
            </div>
        </div><!--/col-->
    </div><!--/col-->
</div>