@model HotelSystem.Model.Price

@{
    ViewBag.Title = "CreatePrice";
    Layout = null;
}

@using (Html.BeginForm("CreatePrice", ViewContext.RouteData.GetRequiredString("controller"), FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.Id)
    <div class="row form-horizontal">

        <div class="col-md-6 form-group">
            <label class="control-label col-md-2">起始时间</label>
            <div class="col-md-5">
                <div class="input-group date form_date" data-date-format="yyyy-mm-dd" data-link-field="StartTime" data-link-format="yyyy-mm-dd" style="padding-left:13px;padding-right:13px;">
                    @Html.EditorFor(model => model.StartTime, new { htmlAttributes = new { @class = "form-control" } })
                    <span class="input-group-addon"><span class="glyphicon glyphicon-calendar"></span></span>
                </div>
                <input type="hidden" id="StartTime" name="StartTime" value="" />

                @Html.ValidationMessageFor(model => model.StartTime, "", new { @class = "text-danger" })
            </div>
            <div class="col-md-5">

                <div class="input-group date form_date" data-date-format="yyyy-mm-dd" data-link-field="EndTime" data-link-format="yyyy-mm-dd" style="padding-left:13px;padding-right:13px;">
                    @Html.EditorFor(model => model.EndTime, new { htmlAttributes = new { @class = "form-control" } })
                    <span class="input-group-addon"><span class="glyphicon glyphicon-calendar"></span></span>
                </div>
                <input type="hidden" id="EndTime" name="EndTime" value="" />
                @Html.ValidationMessageFor(model => model.EndTime, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="col-md-6 form-group">
            <div class="col-md-9">
                <label class="checkbox-inline">
                    @Html.CheckBoxFor(model => model.Monday)
                    @Html.DisplayNameFor(model => model.Monday)
                    @Html.ValidationMessageFor(model => model.Monday, "", new { @class = "text-danger" })
                </label>

                <label class="checkbox-inline">
                    @Html.CheckBoxFor(model => model.Tuesday)
                    @Html.DisplayNameFor(model => model.Tuesday)
                    @Html.ValidationMessageFor(model => model.Tuesday, "", new { @class = "text-danger" })
                </label>
                <label class="checkbox-inline">
                    @Html.CheckBoxFor(model => model.Wednesday)
                    @Html.DisplayNameFor(model => model.Wednesday)
                    @Html.ValidationMessageFor(model => model.Wednesday, "", new { @class = "text-danger" })
                </label>
                <label class="checkbox-inline">
                    @Html.CheckBoxFor(model => model.Thursday)
                    @Html.DisplayNameFor(model => model.Thursday)
                    @Html.ValidationMessageFor(model => model.Thursday, "", new { @class = "text-danger" })
                </label>
                <label class="checkbox-inline">
                    @Html.CheckBoxFor(model => model.Friday)
                    @Html.DisplayNameFor(model => model.Friday)
                    @Html.ValidationMessageFor(model => model.Friday, "", new { @class = "text-danger" })
                </label>
                <label class="checkbox-inline">
                    @Html.CheckBoxFor(model => model.Saturday)
                    @Html.DisplayNameFor(model => model.Saturday)
                    @Html.ValidationMessageFor(model => model.Saturday, "", new { @class = "text-danger" })
                </label>
                <label class="checkbox-inline">
                    @Html.CheckBoxFor(model => model.Sunday)
                    @Html.DisplayNameFor(model => model.Sunday)
                    @Html.ValidationMessageFor(model => model.Sunday, "", new { @class = "text-danger" })
                </label>
            </div>
        </div>
    </div>
    <div class="row form-horizontal">

        <div class="col-md-4 form-group">
            @Html.LabelFor(model => model.Breakfast, htmlAttributes: new { @class = "col-md-3 control-label" })
            <div class="col-md-9">
                @Html.DropDownListFor(m => m.Breakfast, ViewBag.Breakfast as SelectList, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Breakfast, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="col-md-4 form-group">
            @Html.LabelFor(model => model.Broadband, htmlAttributes: new { @class = "control-label col-md-3" })
            <div class="col-md-9">
                @Html.DropDownListFor(m => m.Broadband, ViewBag.Broadband as SelectList, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Broadband, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="col-md-4 form-group">
            @Html.LabelFor(model => model.PaymentMethod, htmlAttributes: new { @class = "control-label col-md-3" })
            <div class="col-md-9">
                @Html.DropDownListFor(m => m.PaymentMethod, ViewBag.PaymentMethod as SelectList, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.PaymentMethod, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="col-md-4 form-group">
            @Html.LabelFor(model => model.UnitPrice, htmlAttributes: new { @class = "control-label col-md-3" })
            <div class="col-md-9">
                <div class="input-group">
                    <div class="input-group-addon">¥</div>
                    @Html.EditorFor(model => model.UnitPrice, new { htmlAttributes = new { @class = "form-control" } })
                </div>

                @Html.ValidationMessageFor(model => model.UnitPrice, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="col-md-4 form-group">
            @Html.LabelFor(model => model.ExtraBedPrice, htmlAttributes: new { @class = "control-label col-md-3" })
            <div class="col-md-9">
                <div class="input-group">
                    <div class="input-group-addon">¥</div>
                    @Html.EditorFor(model => model.ExtraBedPrice, new { htmlAttributes = new { @class = "form-control" } })
                </div>

                @Html.ValidationMessageFor(model => model.ExtraBedPrice, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="col-md-4 form-group">
            @Html.LabelFor(model => model.Number, htmlAttributes: new { @class = "control-label col-md-3" })
            <div class="col-md-9">
                @Html.EditorFor(model => model.Number, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Number, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="col-md-4 form-group">
            <div class="col-md-offset-2 col-md-9">
                <input type="submit" value="发布房价" class="btn btn-default" />
            </div>
        </div>
    </div>
}