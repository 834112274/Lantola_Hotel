@using HotelSystem.Model;
@{
    ViewBag.Title = "会议室";
    Layout = "~/Views/Shared/_LayoutHotel.cshtml";
}
<link href='~/Scripts/ico/icon.css' rel='stylesheet' type='text/css' />
<style>
    body{
        background: #f5f5f5;
    }
    .icon span, .icon i {
        /*line-height:30px;*/
        /*float:left;*/
        vertical-align: middle;
    }
    .icon span {
        margin-left:6px;
    }
    /*客房列表*/
    .room-box {
        
        padding-top: 20px;
    }

    .media-left .img {
        display: block;
        height: 200px;
    }

    .media-heading {
        padding-bottom: 4px;
    }

    .room-list .view {
        margin-bottom: 10px;
    }

    .room-list .img-list {
        margin: 0px;
    }

    .media-body, .media-left, .media-right {
        display: table-cell;
        vertical-align: top;
    }

    .media-heading span, .media-heading a {
        font-size: 14px;
    }

    .room-info {
        padding-top: 20px;
    }

        .room-info table {
            width: 100%;
        }

            .room-info table td {
                text-align: left;
                color: #444;
                font-size: 14px;
                line-height: 40px;
                padding: 0;
                height: 40px;
            }

    .personal-info {
        height: 280px;
        background: url(/Images/user_bg.jpg) no-repeat;
        background-size: cover;
        background-position: center;
        position: relative;
    }

    .hotel-info .star {
        margin-left: 10px;
    }

    .item-box {
        margin-bottom: 30px;
    }

    .item-row {
        font-size: 12px;
        line-height: 20px;
        padding: 10px 0px;
        border-bottom: 1px dashed #dcdcdc;
        overflow: hidden;
        margin: 0px 15px 0px 15px;
    }
</style>
<div class="personal-info">
</div>
<div class="container-fluid room-box">
    <div class="container">
        <div class="panel panel-default">
            <div class="panel-body">
                <table style="width:100%;line-height:40px;">
                    <tbody>
                        <tr>
                            <td>会议室数量：@Model.RoomCount</td>
                            <td>最大会议室面积：@Model.MaxArea</td>
                            <td>开业年份：@(ViewBag.Hotel.OpeningTime == null ? "" : DateTime.Parse(ViewBag.Hotel.OpeningTime.ToString()).ToString("yyyy"))</td>
                            <td>客房数量：@ViewBag.Hotel.RoomCount</td>
                        </tr>
                        <tr>
                            <td>茶歇：<span class="fa fa-rmb"></span>@Model.TeaBreak 起/位</td>
                            <td>自助餐 <span class="fa fa-rmb"></span>@Model.Buffet /人</td>
                            <td>宴会：<span class="fa fa-rmb"></span>@Model.Banquet 起/桌</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<div class="container-fluid room-box">
    <div class="container">
        <div class="room-list">
            @foreach (var room in Model.ConferenceRoom)
            {
                <div class="panel panel-default">
                    <div class="panel-body">
                        <div class="media view">
                            <div class="media-left col-md-4" style="padding-left:0px;">
                                @{
                                    <a href="javascript:;" class="img more" data-target="#@room.Id" style="background:url('@room.Images') no-repeat;background-size:cover;background-position:center;">
                                    </a>
                                }
                            </div>
                            <div class="media-body">
                                <h4 class="media-heading text-muted">@room.Name &nbsp; <span class="text-muted"></span>&nbsp; &nbsp; &nbsp; &nbsp;</h4>
                                <div class="room-info">
                                    <table>
                                        <tbody>
                                            <tr>
                                                <td>面积：@room.Area</td>
                                                <td>容纳人数：@room.Capacity </td>
                                                <td>时间 @room.BusinessHours</td>
                                            </tr>
                                            <tr>
                                                <td>层高：@room.Storey</td>
                                                <td>长度/宽度： @room.Size </td>
                                                <td>立柱：@(room.Column==0?"无":"有") </td>
                                            </tr>
                                            <tr>
                                                <td colspan="3">收费：@("￥"+ room.Price+"/场") @("￥" + room.HalfPrice + "/半场")</td>
                                            </tr>
                                            <tr>
                                                <td colspan="3">会议布局：@room.Layout</td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                                    }
        </div>
    </div>
    <div class="container">
        <div class="panel panel-default">
            <div class="panel-body">
                <div style="background:#fff;padding:15px;padding-bottom:40px;">
                    <h4>酒店设施</h4>
                    <hr />
                    <div class="item-box">
                        <div class="row">
                            <div class="item-row">
                                <span class="col-md-2"> 通用项目： </span>
                                <div class="col-md-10 icon">

                                    @foreach (var p in ViewBag.Policy0)
                                    {
                                        <i class="sprite @p.Icon"></i><span>@p.Name</span>
                                    }
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="item-row">
                                <span class="col-md-2"> 服务项目： </span>
                                <div class="col-md-10 icon">

                                    @foreach (var p in ViewBag.Policy1)
                                    {
                                        <i class="sprite @p.Icon"></i><span>@p.Name</span>
                                    }
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="item-row">
                                <span class="col-md-2"> 客房设施： </span>
                                <div class="col-md-10 icon">

                                    @foreach (var p in ViewBag.Policy2)
                                    {
                                        <i class="sprite @p.Icon"></i><span>@p.Name</span>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                    <h4>酒店政策</h4>
                    <hr />
                    <div class="item-box">
                        <div class="row">
                            <div class="item-row">
                                <div class="col-md-6" style="padding:0px;">
                                    <span class="col-lg-3 col-md-3 col-sm-12"> 入住和离店： </span>
                                    <div class="col-lg-9 col-md-9">
                                        @ViewBag.Service.CheckInTime - @ViewBag.Service.LeaveTime
                                    </div>
                                </div>

                                <div class="col-md-6" style="padding:0px;">
                                    <span class="col-lg-3 col-md-3 col-sm-12">携带宠物： </span>
                                    <div class="col-lg-9 col-md-9">
                                        @ViewBag.Service.Pet
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="item-row">
                                <div class="col-md-6" style="padding:0px;">
                                    <span class="col-lg-3 col-md-3 col-sm-12"> 自助早餐： </span>
                                    <div class="col-lg-9 col-md-9">
                                        @ViewBag.Service.Buffet
                                    </div>
                                </div>

                                <div class="col-md-6" style="padding:0px;">
                                    <span class="col-lg-3 col-md-3 col-sm-12"> 接受信用卡： </span>
                                    <div class="col-lg-9 col-md-9">
                                        @ViewBag.Service.CreditCard
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


