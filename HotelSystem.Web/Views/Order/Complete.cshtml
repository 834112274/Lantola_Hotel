@model HotelSystem.Model.Order
@{
    ViewBag.Title = "Complete";
    Layout = "~/Views/Shared/_LayoutHeader.cshtml";
}
<style>
    .order-container {
        margin: 0px auto 60px auto;
        width: 1170px;
        background: #fff;
        border-radius: 5px;
        border: 1px solid #bfbfbf;
        padding: 30px 80px;
    }

    .pay-message {
        height: 140px;
        padding-bottom: 40px;
        background-image: url(/Images/payicon6.png);
        background-position: center bottom;
        background-repeat: repeat-x;
    }

    .pay-ico {
        height: 100%;
        width: 100px;
        float: left;
        margin-right: 30px;
    }

        .pay-ico img {
            height: 100%;
            width: 100%;
        }

    .pay-info {
        height: 100%;
        width: 620px;
    }

        .pay-info .title:nth-child(1) {
            line-height: 60px;
            height: 60px;
            font-size: 24px;
            color: #626262;
        }

        .pay-info .title:nth-child(2) {
            font-size: 14px;
            color: #7d7d7d;
        }
        .pay-info .title:nth-child(3) {
            font-size: 14px;
            color: #7d7d7d;
        }
    .describe {
        padding-top: 30px;
    }

    .info-item {
        line-height: 40px;
        font-size: 14px;
        color: #313131;
    }

    .info-item-title {
        color: #4e92d2;
    }

    .btn-submit {
        width: 120px;
        height: 35px;
        display: block;
        border: 0;
        color: #fff;
        font-size: 14px;
        text-align: center;
        line-height: 35px;
        padding: 0;
        background-color: #4b90cf;
        font-family: "微软雅黑";
        border-radius: 3px;
        box-shadow: 0px 0px 5px #7e9fbb;
        cursor: pointer;
    }

    .hotel {
        margin: 30px auto;
        overflow: hidden;
    }

        .hotel .hotel-image {
            float: left;
            width: 18%;
            height: 120px;
        }

        .hotel .hotel-info {
            float: left;
            padding-left: 60px;
        }

        .hotel .name {
            font-size: 22px;
            font-weight: 500;
        }

            .hotel .name span {
                font-size: 18px;
            }

        .hotel .english-name, .hotel .address {
            font-size: 16px;
            color: #929090;
        }

    body {
        background: #f1f1f1;
    }
</style>
<div class="container-fluid" style="background:#f1f1f1;">
    <div class="container" style="padding:0px;">
        <div class="hotel">
            <div class="hotel-image" style="background:url('@ViewBag.SlideImgFirst.Url') no-repeat;background-size:cover;background-position:center;"></div>
            <div class="hotel-info">
                <p class="name">
                    @ViewBag.Hotel.Name &nbsp;&nbsp;&nbsp;&nbsp;
                    @for (var i = 0; i < @ViewBag.Hotel.Star; i++)
                    {
                        <span class="fa fa-star star"></span>
                    }
                </p>
                <p class="english-name">@ViewBag.Hotel.EnglishName</p>
                <div class="address">
                    <span>@ViewBag.Hotel.City.Province.ProvinceName</span>
                    <span>@ViewBag.Hotel.City.CityName</span>
                    <span>@ViewBag.Hotel.Adress</span>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="order-container">
    <div class="">
        <div class="pay-message">
            <div class="pay-ico"><img src="/Images/paysuccess.png" /></div>
            <div class="pay-info">
                <div class="title">订单已成功提交</div>
                <div class="title">短信发送至： @Model.ApplyUser  @Model.ApplyPhone.Substring(0, 3)***@Model.ApplyPhone.Substring(Model.ApplyPhone.Length - 3)</div>
                <div class="title">请确保您的手机号码填写正确，无效的手机号可能导致订单取消。</div>
            </div>
            <div class="clear"></div>
        </div>
        <div class="describe">
            <div class="info-item"><span class="info-item-title">酒店政策：</span>酒店入住时间为14：00，办理入住时中国居公民，港澳台居民需提供有效身份证件，外国公民提供有效护照。</div>
            <div class="info-item"><span class="info-item-title">取消政策：</span>根据酒店取消内容显示，为不固定内容。</div>
            <div class="info-item"><span class="info-item-title">发票信息：</span>前台现付的订单请在离店前向酒店索取，预付款订单成交后3个月内可补开发票。</div>
            @*<a href="/Order/Detail/@Model.Id"><input type="submit" class="btn-submit" value="订单详情" /></a>*@
        </div>
    </div>
</div>