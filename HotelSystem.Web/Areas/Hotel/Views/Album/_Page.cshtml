@model PagedList<HotelSystem.Model.HotelImages>
@using Webdiyer.WebControls.Mvc
<style>
    .thumbnail {
        position: relative;
    }

        .thumbnail .caption {
            float: right;
            background-color: rgba(0, 0, 0, 0.30);
            padding: 5px;
            display: block;
            left: 4px;
            right: 4px;
            text-align: right;
            position: absolute;
            bottom: 4px;
            box-sizing: border-box;
        }

            .thumbnail .caption p {
                padding: 0px;
                margin: 0px;
                color: white;
                font-size: 14px;
            }

            .thumbnail .caption a {
                color: red;
                font-size: 16px;
            }
</style>
<div class="row" id="album_list">
    @foreach (var image in Model)
    {
        <div class="col-sm-6 col-md-3">
            <div class="thumbnail">
                <img src="@image.Url" alt="...">
                <div class="caption">
                    <p>
                        @(image.Type == 2 ? "外观及设施" : "客房")
                        <a class="" href="/Hotel/Album/Delete/@image.Id" onclick="return confirm('确认删除图片吗？');" role="button">
                            <i class="glyphicon glyphicon-trash"></i>
                        </a>
                    </p>
                </div>
            </div>
        </div>
    }
</div>