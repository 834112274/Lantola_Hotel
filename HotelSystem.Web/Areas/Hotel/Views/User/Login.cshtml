@model HotelSystem.Model.Users

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>酒店管理登录</title>
    <!-- Css files -->
    <link href="~/Scripts/assets/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/Scripts/assets/css/jquery.mmenu.css" rel="stylesheet">
    <link href="~/Scripts/assets/css/font-awesome.min.css" rel="stylesheet">
    <link href="~/Scripts/assets/css/climacons-font.css" rel="stylesheet">
    <link href="~/Scripts/assets/css/style.min.css" rel="stylesheet">
    <link href="~/Scripts/assets/css/add-ons.min.css" rel="stylesheet">
</head>
<body>
    <div class="container-fluid content">
        <div class="row">
            <div id="content" class="col-sm-12 full">
                <div class="row">
                    <div class="login-box">

                        <div class="header">
                            LANTOLA酒店管理系统
                        </div>
                        @using (Html.BeginForm("Login", "User", FormMethod.Post))
                        {
                            <fieldset class="col-sm-12">
                                <div class="form-group">
                                    <div class="controls row">
                                        <div class="input-group col-sm-12">
                                            <input type="text" class="form-control" id="username" name="Name" placeholder="请输入用户名" />
                                            <span class="input-group-addon"><i class="fa fa-user"></i></span>
                                        </div>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <div class="controls row">
                                        <div class="input-group col-sm-12">
                                            <input type="password" class="form-control" id="password" name="Password" placeholder="请输入密码" />
                                            <span class="input-group-addon"><i class="fa fa-key"></i></span>
                                        </div>
                                    </div>
                                </div>

                                <div class="row">

                                    <button type="submit" class="btn btn-lg btn-primary col-xs-12">登录</button>
                                </div>
                                <div class="row">
                                    <div class="set1"><input name="remember" value="1" type="checkbox" />记住账号</div>
                                    <div class="clear"></div>
                                </div>
                            </fieldset>
                        }

                        <div class="clearfix"></div>
                    </div>
                </div><!--/row-->
            </div>
        </div><!--/row-->
    </div><!--/container-->
</body>
</html>