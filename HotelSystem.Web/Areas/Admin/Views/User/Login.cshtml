
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>lantola 酒店后台登陆</title>
    <link href='~/Css/hotel_backstage.css' rel='stylesheet' type='text/css' />
    <script src="~/Scripts/jquery-1.7.2.min.js" type="text/javascript"></script>
    <script src="~/Scripts/Admin/hotel_backstage.js" type="text/javascript"></script>
    
    <!--<base target="_blank"/>-->
</head>
<body>
    <div class="kuang">
        @using (Html.BeginForm("Login", "User", FormMethod.Post))
        {
            <div class="kuang1">
                <div class="logo"><img src="~/Images/backstagelogo.png" /></div>
                <div class="title">LANTOLA后台管理系统</div>
                <p style="color:red;text-align:center;">@ViewBag.Message</p>
                <div class="input">
                    <div class="username"><div class="input1">账号</div><input type="text" name="Name" class="" value="" /><div class="clear"></div></div>
                    <div class="password">
                        <div class="input1">密码</div><input type="password" name="Password" class="" /><div class="clear"></div>
                        <div class="inputsubmit"><input type="submit" value="" /><div class="inputsubmit1"></div></div>
                    </div>
                </div>
                <div class="set">
                    <div class="set1"><input name="remember" value="1" type="checkbox" />记住账号</div>
                    <a class="set2" href="">找回密码</a>
                    <div class="clear"></div>
                </div>
            </div>
        }
        
        <div class="bottom">沪ICP备 15056989号-1<br />版权所有© 2017-2018 Shanghai Lantola E-business Co.Ltd保留所有权利</div>
    </div>
</body>
</html>
