@model PagedList<HotelSystem.Model.Company>
@using Webdiyer.WebControls.Mvc
<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>公司</th>
            <th>地址</th>
            <th>联系人</th>
            <th>手机</th>
            <th>申请时间</th>
            <th>审核状态</th>
            <th>审核时间</th>
            <th>审核意见(审核人)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var m in Model)
        {
            <tr>
                <td>@m.Name</td>
                <td>@m.Address</td>
                <td>@m.Contact</td>
                <td>@m.Phone</td>
                <td>@m.CreateTime.ToString("yyyy-MM-dd HH:mm")</td>
                <td>@(m.Status==0?"未审核": m.Status == 1?"通过":"未通过")</td>
                <td>
                    @if (m.Status != 0)
                    {
                        <span>@m.ExamineTime.ToString("yyyy-MM-dd HH:mm")</span>
                    }
                </td>
                <td>
                    @if (m.Status != 0)
                    {
                        <span>@m.Opinion (@m.ExamineUser)</span>
                    }
                </td>
                <td>
                    <a href="/Admin/UserManage/CompanyExamine/@m.Id">审核</a>
                </td>
            </tr>
        }
    </tbody>
</table>

