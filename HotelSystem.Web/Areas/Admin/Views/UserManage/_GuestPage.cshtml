@model PagedList<HotelSystem.Model.GuestUser>
@using Webdiyer.WebControls.Mvc
<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>用户类型</th>
            <th>用户名</th>
            <th>昵称</th>
            <th>姓名</th>
            <th>性别</th>
            <th>手机</th>
            <th>邮箱</th>
            <th>城市</th>
            <th>最后登录</th>
            <th>注册IP</th>
            <th>注册时间</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var m in Model)
        {
            <tr>
                <td>@(m.Type==1?"散客":"企业用户")</td>
                <td>@m.Name</td>
                <td>@m.NickName</td>
                <td>@m.RealName</td>
                <td>@(m.Sex == 0 ? "男" : "女")</td>
                <td>@m.Phone</td>
                <td>@m.Email</td>
                <td>@m.City</td>
                <td>@m.LastLogin.ToString("yyyy-MM-dd HH:mm")</td>
                <td>@m.RegisterIp</td>
                <td>@m.RegisterTime.ToString("yyyy-MM-dd HH:mm")</td>
                <td>
                    <a href="javascript:;" class="ResetPassword"  onclick="return confirm('确定重置密码吗？');" data-user="@m.Id">重置密码</a>
                </td>
            </tr>
        }
    </tbody>
</table>
