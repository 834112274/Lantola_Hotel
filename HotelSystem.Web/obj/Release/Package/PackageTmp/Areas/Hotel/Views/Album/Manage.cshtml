@model PagedList<HotelSystem.Model.HotelImages>
@using Webdiyer.WebControls.Mvc
@{
    ViewBag.Title = "相册";
    Layout = "~/Areas/Hotel/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h2><i class="fa fa-indent red"></i><strong>上传照片</strong></h2>
            </div>
            <div class="panel-body">
                <form enctype="multipart/form-data" action="/Hotel/Album/UpLoad" class="form-horizontal group-border" role="form" method="post">

                    <div class="form-group">
                        <label class="col-lg-2 col-md-2 col-sm-12 control-label">分类</label>
                        <div class="col-lg-3 col-md-10">
                            <select name="Type" class="form-control" placeholder="必填">
                                <option value="2">外观及设施</option>
                                <option value="3">客房</option>
                            </select>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-lg-2 col-md-2 col-sm-12 control-label">选择照片</label>
                        <div class="col-lg-10 col-md-10">
                            <input name="albumImages" type="file" accept=".jpg,.png,jpeg" multiple required>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-lg-2 col-md-2 col-sm-12 control-label"></label>
                        <div class="col-lg-10 col-md-10">

                            <button type="submit" class="btn btn-sm btn-success"><i class="fa fa-dot-circle-o"></i> 提交</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div><!--.col-->
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading" data-original-title="">
                <h2><i class="fa fa-picture-o red"></i><strong>相册</strong></h2>
            </div>
            <div class="panel-body">
                <div id="album" class="container-fluid">
                    @Html.Partial("_List", Model);
                </div>
            </div>
        </div><!--/col-->
    </div><!--/col-->
</div>
@{Html.RegisterMvcPagerScriptResource();}
<script src="~/Scripts/masonry.pkgd.min.js"></script>
<script src="~/Scripts/imagesloaded.pkgd.min.js"></script>
<script>
    var masonryInit = function () {
        $('#album').imagesLoaded(function () {
            $("#album_list").masonry();
        });
    };
    $(document).ready(function ($) {
        masonryInit();
    });
</script>