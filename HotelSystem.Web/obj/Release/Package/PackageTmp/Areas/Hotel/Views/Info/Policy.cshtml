@using HotelSystem.Model;
@{
    ViewBag.Title = "Policy";
    Layout = "~/Areas/Hotel/Views/Shared/_Layout.cshtml";
}
<link href='~/Scripts/ico/icon.css' rel='stylesheet' type='text/css' />
<style>
    .icon span, .icon i {
        /*line-height:30px;*/
        /*float:left;*/
        vertical-align: middle;
    }
</style>

<form enctype="multipart/form-data" class="form-horizontal group-border" role="form" method="post" action="/Hotel/Info/ChangePolicy">
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h2><i class="fa fa-indent red"></i><strong>酒店设施</strong></h2>
                </div>
                <div class="panel-body">
                    @{
                        List<HotelPolicy> hotelPolicy = new List<HotelPolicy>();
                        if (ViewBag.HotelPolicy != null)
                        {
                            hotelPolicy = ViewBag.HotelPolicy as List<HotelPolicy>;
                            <span>@hotelPolicy.Count()</span>
                        }

                        <div class="form-group">
                            <label class="col-lg-2 col-md-2 col-sm-12 control-label"><font color="red">*</font> 通用项目 </label>
                            <div class="col-lg-10 col-md-10">
                                @foreach (var p in ViewBag.Policy0)
                                {
                                    var check = "";
                                    foreach (var t in hotelPolicy)
                                    {
                                        if (t.PolicyId == p.Id)
                                        {
                                            check = "checked";
                                            break;
                                        }
                                    }
                                    <label class="checkbox-inline icon">
                                        <input type="checkbox" name="policy" value="@p.Id" @check><i class="sprite @p.Icon"></i><span>@p.Name</span>
                                    </label>

                                }
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-lg-2 col-md-2 col-sm-12 control-label"><font color="red">*</font> 服务项目 </label>
                            <div class="col-lg-10 col-md-10">

                                @foreach (var p in ViewBag.Policy1)
                                {

                                    var check = "";
                                    foreach (var t in hotelPolicy)
                                    {
                                        if (t.PolicyId == p.Id)
                                        {
                                            check = "checked";
                                            break;
                                        }
                                    }
                                    <label class="checkbox-inline icon">
                                        <input type="checkbox" name="policy" value="@p.Id" @check><i class="sprite @p.Icon"></i><span>@p.Name</span>
                                    </label>
                                }
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-lg-2 col-md-2 col-sm-12 control-label"><font color="red">*</font> 客房设施 </label>
                            <div class="col-lg-10 col-md-10">
                                @foreach (var p in ViewBag.Policy2)
                                {
                                    var check = "";
                                    foreach (var t in hotelPolicy)
                                    {
                                        if (t.PolicyId == p.Id)
                                        {
                                            check = "checked";
                                            break;
                                        }
                                    }
                                    <label class="checkbox-inline icon">
                                        <input type="checkbox" name="policy" value="@p.Id" @check><i class="sprite @p.Icon"></i><span>@p.Name</span>
                                    </label>
                                }
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div><!--.col-->
    </div>

    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h2><i class="fa fa-indent red"></i><strong>酒店政策</strong></h2>
                </div>
                <div class="panel-body">
                    <input type="hidden" name="Id" value="@ViewBag.Service.Id" />
                    <div class="form-group">
                        <label class="col-lg-2 col-md-2 col-sm-12 control-label"><font color="red">*</font> 入住时间</label>
                        <div class="col-lg-1 col-md-10">
                            <select name="CheckInTime" class="form-control" placeholder="必填">
                                <option value="12:00之后" @(ViewBag.Service.CheckInTime == "12:00之后" ? "selected" : "")>12:00之后</option>
                                <option value="14:00之后" @(ViewBag.Service.CheckInTime == "14:00之后" ? "selected" : "")>14:00之后</option>
                            </select>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-lg-2 col-md-2 col-sm-12 control-label"><font color="red">*</font> 离店时间</label>
                        <div class="col-lg-1 col-md-10">
                            <select name="LeaveTime" class="form-control" placeholder="必填">
                                <option value="12:00之前" @(ViewBag.Service.LeaveTime == "12:00之前" ? "selected" : "")>12:00之前</option>
                                <option value="13:00之前" @(ViewBag.Service.LeaveTime == "13:00之前" ? "selected" : "")>13:00之前</option>
                                <option value="14:00之前" @(ViewBag.Service.LeaveTime == "14:00之前" ? "selected" : "")>14:00之前</option>
                            </select>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-lg-2 col-md-2 col-sm-12 control-label"><font color="red">*</font> 携带宠物</label>
                        <div class="col-lg-1 col-md-10">
                            <select name="Pet" class="form-control" placeholder="必填">
                                <option value="不可携带" @(ViewBag.Service.Pet == "不可携带" ? "selected" : "")>不可携带</option>
                                <option value="可以携带" @(ViewBag.Service.Pet == "可以携带" ? "selected" : "")>可以携带</option>
                            </select>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-lg-2 col-md-2 col-sm-12 control-label"><font color="red">*</font> 自助早餐</label>
                        <div class="col-lg-10 col-md-10">
                            <input name="Buffet" type="text" class="form-control" placeholder="例：RMB128" value="@ViewBag.Service.Buffet">
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-lg-2 col-md-2 col-sm-12 control-label"><font color="red">*</font> 接受信用卡</label>
                        <div class="col-lg-10 col-md-10">
                            @{
                                if (ViewBag.Service.CreditCard == null)
                                {
                                    ViewBag.Service.CreditCard = "";
                                }
                            }
                            <label class="checkbox-inline">
                                <input type="checkbox" name="CreditCard" value="招商银行" @(ViewBag.Service.CreditCard.Contains("招商银行") ? "checked" : "")> 招商银行
                            </label>
                            <label class="checkbox-inline">
                                <input type="checkbox" name="CreditCard" value="建设银行" @(ViewBag.Service.CreditCard.Contains("建设银行") ? "checked" : "")> 建设银行
                            </label>
                            <label class="checkbox-inline">
                                <input type="checkbox" name="CreditCard" value="交通银行" @(ViewBag.Service.CreditCard.Contains("交通银行") ? "checked" : "")> 交通银行
                            </label>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-lg-2 col-md-2 col-sm-12 control-label"></label>
                        <div class="col-lg-10 col-md-10">
                            <button type="submit" class="btn btn-sm btn-success"><i class="fa fa-dot-circle-o"></i> 保存</button>
                        </div>
                    </div>
                </div>
            </div>
        </div><!--.col-->
    </div>
</form>