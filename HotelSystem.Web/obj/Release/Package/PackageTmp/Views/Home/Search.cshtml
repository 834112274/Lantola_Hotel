<script>
    var current = moment();
    var s = moment("@ViewBag.SearchParams.start");
    var e = moment("@ViewBag.SearchParams.end");
    function showDefaultDate(target, start, end) {
        target.find(".start").eq(0).find("p").eq(0).text(start.format('YYYY年MM月DD日'));
        target.find(".start").eq(0).find("p").eq(1).text(getWeek(start.format('d')));
        target.find(".end").eq(0).find("p").eq(0).text(end.format('YYYY年MM月DD日'));
        target.find(".end").eq(0).find("p").eq(1).text(getWeek(end.format('d')));
        target.find(".day-value").text(end.diff(start, 'days'));
        target.find("input[name='start']").val(start.format('YYYY-MM-DD'));
        target.find("input[name='end']").val(end.format('YYYY-MM-DD'));
    }
    showDefaultDate($(".daterange"), s, e);
    $(".daterange").daterangepicker({
        "autoApply": true,
        "startDate": s.format('YYYY年MM月DD日'),
        "endDate": e.format('YYYY年MM月DD日'),
        "opens": "center",
        "minDate": current.format('YYYY年MM月DD日'),
        locale: locale
    }, function (start, end, label) {
        showDefaultDate(this.element, start, end);
    });
    $(document).ready(function () {
        $("#user_menu").find("li").removeClass("active");
        var url = window.location.href;
        $("#user_menu").find("li").each(function () {
            var a = $(this).find("a").attr("href");
            if (url.indexOf(a) > 0) {
                $(this).addClass("active");
            }
            else {
                $(this).removeClass("active");
            }
        });

        $(".facilities li").click(function () {
            var ck = $(this).find("input");
            if ($(this).hasClass("selected")) {
                ck.prop('checked', false);
                $(this).removeClass("selected")
            }
            else {
                ck.prop('checked', true);
                $(this).addClass("selected")
            }
            $("#search").submit();
        })
        $(".area li,.starValue li,.sort li").click(function () {
            $(this).parent().find("li").removeClass("selected")
            var ck = $(this).find("input");
            if ($(this).hasClass("selected")) {
                ck.prop('checked', false);
                $(this).removeClass("selected")
            }
            else {
                ck.prop('checked', true);
                $(this).addClass("selected")
            }
            $("#search").submit();
        })
        $.get("/Partial/GetCityData", function (data) {

            var cityData = [];
            $.each(data, function (i, v) {
                cityData.push(v.value);
            });

            inCity.allCity = cityData;
            var citys = inCity.allCity, match, letter,
            regEx = inCity.regEx,
            reg2 = /^[a-z]$/i;
            if (!inCity.oCity) {
                inCity.oCity = { hot: {}, ABCDEFG: {}, HIJKL: {}, MNOPQRST: {}, WXYZ: {} };
                //console.log(citys.length);
                for (var i = 0, n = citys.length; i < n; i++) {
                    match = regEx.exec(citys[i]); //exec
                    letter = match[3].toUpperCase(); //转换字母为大写

                    if (reg2.test(letter)) { //test检测一个字符串是否匹配某个模式
                        if (!inCity.oCity.ABCDEFG[letter]) inCity.oCity.ABCDEFG[letter] = [];
                        inCity.oCity.ABCDEFG[letter].push(match[1]);
                    } else if (reg3.test(letter)) {
                        if (!inCity.oCity.HIJKL[letter]) inCity.oCity.HIJKL[letter] = [];
                        inCity.oCity.HIJKL[letter].push(match[1]);
                    } else if (reg4.test(letter)) {
                        if (!inCity.oCity.MNOPQRST[letter]) inCity.oCity.MNOPQRST[letter] = [];
                        inCity.oCity.MNOPQRST[letter].push(match[1]);
                    } else if (reg5.test(letter)) {
                        if (!inCity.oCity.WXYZ[letter]) inCity.oCity.WXYZ[letter] = [];
                        inCity.oCity.WXYZ[letter].push(match[1]);
                    }
                }
                /* 热门城市 页面固定JS数据 */
                for (var i = 0, n = inCity.hotCitys.length; i < n; i++) {
                    match = regEx.exec(inCity.hotCitys[i]); //exec
                    if (!inCity.oCity.hot['hot']) inCity.oCity.hot['hot'] = [];
                    inCity.oCity.hot['hot'].push(match[1]);
                }
            }
            var cityA = $(".city_a_le1 a"); //城市
            var pla = $("#place");  //出发地
            // 默认值
            inCity.width = "700";  //城市选择框  宽
            inCity.height = "auto";  //城市选择框  高
            inCity.id = "#in_city";  //城市选择框  父级ID
            inCity.Children = '.city_a_le1';  //城市名box
            // 初始化 城市HTML模板
            $(inCity.id).prepend(inCity._template.join(''));
            inCity.Hot(cityA);

            //城市 导航
            var apay = $(".screen a");

            var placeThis; //当前选择标签
            apay.click(function (obj) {  //城市导航
                inCity.payment($(this));
            })

            inCity.place(pla); //出发地
            inCity.cityClick(cityA); //显示赋值城市
        });

    });
</script>